@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/main.css">
    <script src="/Scripts/jquery-1.6.4.min.js"></script>
    <script src="/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="/Content/js/maze.js"></script>
    <script>
        $(function () {

            
            loadMap("default");
            

            $("#btnMaze").click(function () {
                return setRobotInMaze(10);
            });
            $("#btnRun").click(function () {
                
                startExplore2();
            });

        });
    </script>
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Maze options</h3>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Size:</label>
                            <div class="col-sm-10">
                                <select class="form-control input-sm " id="inputEmail3">
                                    <option value="50">50 x 50</option>
                                    <option value="100">100 x 100</option>
                                    <option valie="200">200 x 200</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Robots:</label>
                            <div class="col-sm-10">
                                <select class="form-control input-sm " id="inputEmail3">
                                    <option>1</option>
                                    <option>5</option>
                                    <option>10</option>
                                    <option>50</option>
                                    <option>200</option>
                                    aeroplane cover
                                </select>
                            </div>
                        </div>
                       
                        <button type="button" class="btn btn-default btn-block" id="btnMaze">Generate Maze</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Running syle</h3>
                </div>
                <div class="panel-body ">
                    <form class="form-horizontal" role="form">
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                                Default
                            </label>
                        </div>

                        <div class="radio">
                            <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                                Asynchronous
                            </label>
                        </div>
                        
                        <div style="float:left;">
                            <div class="radio" style="float:left;">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                                    Multithreading
                                </label>
                            </div>
                            <div  style="float:left;">
                                <label for="inputEmail3" style="float:left;padding-top:7px; margin-left:15px;">Threads:</label>
                                <div style="float:left;margin-left:15px;margin-top:4px;">
                                    <select class="form-control input-sm " id="inputEmail3">
                                        <option>2</option>
                                        <option>4</option>
                                        <option>8</option>
                                        <option>16</option>
                                        <option>24</option>
                                        <option>32</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        
                        <button type="button" class="btn btn-primary btn-block" style="float:left;margin-top:10px;" id="btnRun">Run Robots!</button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
        
    <section id="maze"></section>


    
        
        
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
            60%
        </div>
    </div>
    
    <textarea id="txtMazeJson"></textarea>
        
        

        
    
</body>
</html>
